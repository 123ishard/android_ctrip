<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.home.HomeFragment">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/shape_home_bar_bg"
        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="22dp"
            android:alpha="0.86"
            android:src="@mipmap/search"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingHorizontal="42dp"
            android:layout_marginHorizontal="16dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp"
            android:background="@drawable/search_bar_circular_bg"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end|bottom"
            android:alpha="0.86"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="21dp"
            android:src="@mipmap/voice"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nav_img_attractions"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_weight="1"
                tools:src="@mipmap/lbsguide" />
            <TextView
                android:id="@+id/nav_txt_attractions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="13sp"
                tools:text="景点攻略"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nav_img_tickets"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_weight="1"
                tools:src="@mipmap/lbsguide" />
            <TextView
                android:id="@+id/nav_txt_tickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="13sp"
                tools:text="景点攻略"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nav_img_food"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_weight="1"
                tools:src="@mipmap/lbsguide" />
            <TextView
                android:id="@+id/nav_txt_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="13sp"
                tools:text="景点攻略"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nav_img_around"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_weight="1"
                tools:src="@mipmap/lbsguide" />
            <TextView
                android:id="@+id/nav_txt_around"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="13sp"
                tools:text="景点攻略"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nav_img_day"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_weight="1"
                tools:src="@mipmap/lbsguide" />
            <TextView
                android:id="@+id/nav_txt_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="13sp"
                tools:text="景点攻略"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Home" />

</LinearLayout>